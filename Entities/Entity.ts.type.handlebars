import 'reflect-metadata';
{{#ifDirective this "entity"}}
import { BaseEntity, Convertible, asEntity } from 'smart-db';
{{/ifDirective}}
{{#ifDirective this "smartDBEntity"}}
import { BaseSmartDBEntity, Convertible, Maybe, StakeCredentialPubKeyHash, asSmartDBEntity } from 'smart-db';
{{/ifDirective}}

{{#ifDirective this "entity"}}
@asEntity()
{{/ifDirective}}
{{#ifDirective this "smartDBEntity"}}
@asSmartDBEntity()
{{/ifDirective}}

export class {{name}}Entity extends {{#ifDirective this "entity"}}Base{{/ifDirective}}{{#ifDirective this "smartDBEntity"}}BaseSmartDB{{/ifDirective}}Entity {
    protected static _apiRoute: string = '{{toLowerCase name}}';
    protected static _className: string = '{{name}}';

    // #region fields

    {{#each fields}}
    @Convertible()
    {{name}}!: {{convertGqlTypeToTs type}};

    {{/each}}

    // #endregion fields

    // #region db

    public static defaultFieldsWhenUndefined: Record<string, boolean> = {};

    public static alwaysFieldsForSelect: Record<string, boolean> = {
        ...super.alwaysFieldsForSelect,
        {{#each fields}}
          {{name}}: true,
        {{/each}}
    };

    // #endregion db
}
